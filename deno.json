{
  "tasks": {
    "dev": "deno run --env main.ts",
    "run": "deno --unstable-cron --allow-read --allow-env --allow-net --allow-sys src/main.ts"
  },
  "imports": {
    "@slack/webhook": "npm:@slack/webhook@^7.0.5",
    "@std/assert": "jsr:@std/assert@1",
    "@std/datetime": "jsr:@std/datetime@^0.225.4",
    "fast-xml-parser": "npm:fast-xml-parser@^5.2.1",
    "neverthrow": "npm:neverthrow@^8.2.0"
  },
  "lint": {
    "include": ["./src/**/*.ts"]
  },
  "fmt": {
    "include": ["./src/**/*.ts"],
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false,
    "proseWrap": "always"
  }
}
